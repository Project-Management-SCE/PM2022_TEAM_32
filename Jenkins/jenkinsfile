pipeline {
agent {
	docker {
        	image 'lkldocker/circleci-android-arm32:0.3'
         	reuseNode true            
        }
}

    stages { 
        stage('Build') {
        	steps {
			sh "echo 123"
	 	}
	}
	    
	 stage('Log the Jenkins Docker Ant Git and Java version info') {
         	steps {
	 		sh 'java -version'
	 		sh 'git --version'
         	}
	}
	
	 stage('Tests') {
	 	steps {
                	sh './gradlew test'	
		}
	}
	}
}

    	   
