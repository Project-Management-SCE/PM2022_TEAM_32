pipeline {
    agent {
        docker {
            image 'androidsdk/android-31'
        }
    }
    
    stages {
        stage('Build') {
            steps {
                sh 'chmod +x gradlew && ./gradlew --no-daemon --warning-mode=all --stacktrace clean'                
            }
        }
        stage('Test') {
            steps {           
                sh './gradlew test'
            }
        }
        }
}



    	   
