pipeline {
agent {
	docker {
        image 'gradle:7.1.3-jdk18'
         reuseNode true            
          }
	 }

    stages { 
        stage('Build') {
                        steps {
			sh "echo 123"
			 }
			}
	    
	 stage('Log the Jenkins Docker Ant Git and Java version info') {
            steps {
	    	sh 'java -version'
	    	sh 'git --version'
             }
	}
	}
}

    	   
