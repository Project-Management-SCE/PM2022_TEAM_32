pipeline {
    agent {
        docker {
            image 'androidsdk/android-31'
        }
    }
    
     options {
    // Stop the build early in case of compile or test failures
        skipStagesAfterUnstable()
    }
    
    stages {
        stage('Build') {
            steps {
                sh 'chmod +x gradlew && ./gradlew --no-daemon --stacktrace clean'                
            }
        }
        /* Unit tests */
        stage('Test') {
            steps {           
                sh './gradlew test'
            }
        }
        
        /* Build the apk file */
         stage('Build APK') {
            steps {
                sh './gradlew assembleDebug'
            }
        }
               
        
        }
}



    	   
