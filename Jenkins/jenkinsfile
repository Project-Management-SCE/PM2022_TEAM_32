pipeline {
    stages {
        stage('Log the Jenkins Docker Ant Git and Java version info') {
            steps {
                sh 'ant -version'
	            sh 'java -version'
	            sh 'git --version'
             }
        }   
        stage('Build') {
            agent {
                docker {
                    image 'gradle:7.1.3-jdk18'
                    reuseNode true
             
                }
            }
            steps {
                sh 'gradle --version'
            }
        }
    }
}

