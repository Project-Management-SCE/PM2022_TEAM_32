<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/what"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="@drawable/white_wallpaper"
    tools:context=".NewMikvehActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="700dp"
                android:layout_marginTop="100dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/phone_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:ems="15"
                    android:hint="Phone"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/openingSummer_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:ems="15"
                    android:hint="Opening Hours Summer"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/neighborhood_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ems="15"
                    android:hint="Neighborhood"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/council_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:ems="15"
                    android:hint="Council"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/openingWinter_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:ems="15"
                    android:hint="Opening Hours Winter"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/access_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:ems="15"
                    android:hint="Accessibility"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/openingSaturday_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:ems="15"
                    android:hint="Opening Hours Saturday"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/city_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:ems="15"
                    android:hint="City"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/openingFriday_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:ems="15"
                    android:hint="Opening Hours Friday"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="18sp" />

                <!--<TextView
                    android:id="@+id/appoint_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="Schedule Appointment"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notes_txtView" />-->

                <TextView
                    android:id="@+id/address_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="220dp"
                    android:ems="15"
                    android:hint="Address"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/notes_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:ems="15"
                    android:hint="Notes"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="163dp"
                    android:layout_marginTop="300dp"
                    android:layout_marginEnd="160dp"
                    android:text="BACK"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notes_txtView"
                    android:backgroundTint="#009688" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">-->

    </ScrollView>
</LinearLayout>