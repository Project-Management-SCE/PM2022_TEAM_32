<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a7dcd4"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="34dp"
    tools:context=".UserMenuAppActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:layout_gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/user_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:backgroundTint="#d9dca7"
            android:text="@string/my_profile"
            android:textColor="#322628" />

        <Button
            android:id="@+id/user_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:backgroundTint="#d9dca7"
            android:text="@string/logout"
            android:textColor="#322628" />


        <ImageView
            android:id="@+id/user_flower_image"
            android:layout_width="206dp"
            android:layout_height="126dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/flower" />

        <TextView
            android:id="@+id/user_menu_header"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"
            android:fontFamily="serif-monospace"
            android:text="@string/welcome"
            android:textAlignment="center"
            android:textColor="#87666b"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/text_user_menu"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:text="@string/please_select_mikveh_location"
            android:textAlignment="center"
            android:textColor="#87666b"
            android:textSize="19sp" />

        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:theme="@style/CustomSpinnerTheme"
            tools:ignore="SpeakableTextPresentCheck" />


        <Button
            android:id="@+id/select_button"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#c3b3f7"
            android:text="@string/select"
            android:textAlignment="center"
            android:textColor="#e4f2eb" />

    </LinearLayout>
</FrameLayout>